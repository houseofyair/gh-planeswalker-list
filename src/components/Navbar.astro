<nav class="sticky top-0 light:bg-gray-800 dark:bg-[#001524]">
	<div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
		<div class="relative flex h-12 items-center justify-between">
			<div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
				<div class="flex shrink-0 items-center text-white">
					<span>MTG Planeswalker List</span>
				</div>
			</div>
			<div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
				<button
					type="button"
					class="relative rounded-full bg-gray-800 p-1 text-gray-400 outline-none ring-1 ring-white ring-offset-2 ring-offset-gray-800"
				>
					<span class="sr-only">Light/Dark Toggle</span>
					<div class="i-quill:sun bg-white w-1em h-1em"></div>
				</button>
			</div>
		</div>
	</div>
</nav>

<script is:inline>
	(function () {
		let theme = window.theme.getTheme();
		if (theme === "dark") {
			performSvgSwap(document.getElementsByTagName("button")[0].children[1]);
		}
	})();

	function btnSwapTheme(event) {
		window.theme.swapTheme();
		performSvgSwap(event.target);
	}
	function performSvgSwap(elem) {
		elem.classList.toggle("i-quill:sun");
		elem.classList.toggle("i-quill:moon");
	}
	document.getElementsByTagName("button")[0].addEventListener("click", btnSwapTheme);
</script>
